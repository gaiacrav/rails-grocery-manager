<div class="page">
  <div class="header">
    <h1> 🍇 Add a new ingredient to your list </h1>
  </div>

  <%= simple_form_for [@list, @dose] do |f| %>
    <div class="form-group my-3 mx-3 px-3">
      <%= f.association :ingredient, class: "form-control" %>
      <%# f.input :description, class: "form-control" %>
      <%= f.submit class: 'btn btn-success my-3' %>
    </div>
  <% end %>
  <%= link_to "Back", list_path(@list), class:"btn btn-success" %>
</div>
