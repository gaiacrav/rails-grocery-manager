<div class="page">
  <div class="header">
    <p>Today is <%= Date.today.to_s(:long) %></p>
    <h1> Welcome to your grocery list organizer! </h1>
    <h2>You have <%= @lists.count %> active lists: </h2>
  </div>

    <% @lists.each do |list|%>
      <ul>
        <li>
          <div id="list-name-show">
            <div style="width: 360px">
             🍕 <%= list.name %>
            </div>
            <div style="width: 360px">
            🔗 <%= link_to "Show", list_path(list), class:"btn btn-success"%>
            ❌ <%= link_to "Delete list #{list.name}", lists_path(list), method: :delete, class:"btn btn-warning" %>
            <div>
          </div>
        </li>
      </ul>
    <%end%>

  <div id="end-page">
    <%= link_to "Create a new list now", new_list_path, class:"btn btn-success"%>
  </div>
</div>

